<category cat="001" edition="1.2">
    <dsc>Asterix Category 001, edition 1.2</dsc>
    <items>

        <item name="010">
            <dsc>Data Source Identifier</dsc>
            <items>
                <item name="SAC" type="Fixed"><len>8</len></item>
                <item name="SIC" type="Fixed"><len>8</len></item>
            </items>
        </item>

        <item name="020" type="Extended">
            <dsc>Target Report Descriptor</dsc>
            <len>(8,8)</len>
            <items>
                <item name="TYP" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Plot"/>
                        <value val="1" dsc="Track"/>
                    </values>
                </item>
                <item name="SIM" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Actual plot or track"/>
                        <value val="1" dsc="Simulated plot or track"/>
                    </values>
                </item>
                <item name="SSR_PSR" type="Fixed"><len>2</len>
                    <values>
                        <value val="0" dsc="No detection"/>
                        <value val="1" dsc="Sole primary detection"/>
                        <value val="2" dsc="Sole secondary detection"/>
                        <value val="3" dsc="Combined primary and secondary detection"/>
                    </values>
                </item>
                <item name="ANT" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Target report from anrenna 1"/>
                        <value val="1" dsc="Target report from anrenna 2"/>
                    </values>
                </item>
                <item name="SPI" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="Special Position Identificator"/>
                    </values>
                </item>
                <item name="RAB" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="Plot or track from a fixed transponder"/>
                    </values>
                </item>
                <item name="TST" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="Test target indicator"/>
                    </values>
                </item>
                <item name="DS1_DS2" type="Fixed"><len>2</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="Unlawfull interference (code 7500)"/>
                        <value val="2" dsc="Radio-communication failure (code 7600)"/>
                        <value val="3" dsc="Emergency (code 7700)"/>
                    </values>
                </item>
                <item name="ME" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="Military emergency"/>
                    </values>
                </item>
                <item name="MI" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="Military identification"/>
                    </values>
                </item>
                <item name="spare" type="Spare"><len>2</len></item>
            </items>
        </item>

        <item name="030" type="Extended">
            <dsc>Warning/Error Conditions</dsc>
            <len>(8,8)</len>
            <items>
                <item name="W_E" type="Fixed"><len>7</len>
                    <values>
                        <value val="0" dsc="no warning nor error condition"/>
                        <value val="1" dsc="garbled reply"/>
                        <value val="2" dsc="reflection"/>
                        <value val="3" dsc="sidelobe reply"/>
                        <value val="4" dsc="split plot"/>
                        <value val="5" dsc="second time around reply"/>
                        <value val="6" dsc="angels"/>
                        <value val="7" dsc="terrestrial vehicles"/>
                        <value val="64" dsc="possible wrong code in Mode-3/A"/>
                        <value val="65" dsc="possible wrong altitude information, transmitted when the Code C credibility check fails together with the Mode-C code in binary notation"/>
                        <value val="66" dsc="possible phantom MSSR plot"/>
                        <value val="80" dsc="fixed PSR plot"/>
                        <value val="81" dsc="slow PSR plot"/>
                        <value val="82" dsc="low quality PSR plot"/>
                    </values>
                </item>
            </items>
        </item>

        <item name="040">
            <dsc>Measured Position in Polar Coordinates</dsc>
            <items>
                <item name="RHO" type="Fixed">
                    <len>16</len>
                    <convert>
                        <type>unsigned decimal</type>
                        <lsb>1.0/128</lsb>
                        <unit>NM</unit>
                        <max>512</max>
                    </convert>
                </item>
                <item name="THETA" type="Fixed">
                    <len>16</len>
                    <convert>
                        <type>unsigned decimal</type>
                        <lsb>360.0/pow(2,16)</lsb>
                        <unit>deg</unit>
                    </convert>
                </item>
            </items>
        </item>

        <item name="042">
            <dsc>Calculated Position in Cartesian Coordinates</dsc>
            <items>
                <item name="X" type="Fixed"><len>16</len></item>
                <item name="Y" type="Fixed"><len>16</len></item>
                 <!-- TODO: convert... -->
            </items>
        </item>

        <item name="050">
            <dsc>Mode-2 Code in Octal Representation</dsc>
            <items>
                <item name="V" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Code validated"/>
                        <value val="1" dsc="Code not validated"/>
                    </values>
                </item>
                <item name="G" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="Garbled code"/>
                    </values>
                </item>
                <item name="L" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Mode-2 code as derived from the reply of the transponder"/>
                        <value val="1" dsc="Smoothed Mode-2 code as provided by a local tracker"/>
                    </values>
                </item>
                <item name="spare" type="Spare"><len>1</len></item>
                <item name="ABCD" type="Fixed"><len>12</len></item>
            </items>
        </item>

        <item name="060">
            <dsc>Mode-2 Code Confidence Indikator</dsc>
            <items>
                <item name="spare" type="Spare"><len>4</len></item>
                <item name="QX" type="Fixed"><len>12</len></item>
            </items>
        </item>

        <item name="070">
            <dsc>Mode-3/A Code in Octal Representation</dsc>
            <items>
                <item name="V" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Code validated"/>
                        <value val="1" dsc="Code not validated"/>
                    </values>
                </item>
                <item name="G" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="Garbled code"/>
                    </values>
                </item>
                <item name="L" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Mode-3/A code as derived from the reply of the transponder"/>
                        <value val="1" dsc="Smoothed Mode-3/A code as provided by a local tracker"/>
                    </values>
                </item>
                <item name="spare" type="Spare"><len>1</len></item>
                <item name="ABCD" type="Fixed"><len>12</len></item>
            </items>
        </item>

        <item name="080">
            <dsc>Mode-3/A Code Confidence Indikator</dsc>
            <items>
                <item name="spare" type="Spare"><len>4</len></item>
                <item name="QX" type="Fixed"><len>12</len></item>
            </items>
        </item>

        <item name="090">
            <dsc>Mode-C Code in Binary Representation</dsc>
            <items>
                <item name="V" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Code validated"/>
                        <value val="1" dsc="Code not validated"/>
                    </values>
                </item>
                <item name="G" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="Garbled code"/>
                    </values>
                </item>
                <item name="HEIGHT" type="Fixed"><len>14</len>
                    <convert>
                        <type>decimal</type>
                        <lsb>1.0/4</lsb>
                        <unit>FL</unit>
                    </convert>
                </item>
            </items>
        </item>

        <item name="100">
            <dsc>Mode-C Code and Code Confidence Indicator</dsc>
            <items>
                <item name="V" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Code validated"/>
                        <value val="1" dsc="Code not validated"/>
                    </values>
                </item>
                <item name="G" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="Garbled code"/>
                    </values>
                </item>
                <item name="spare1" type="Spare"><len>2</len></item>
                <item name="HEIGHT" type="Fixed"><len>12</len></item>
                <item name="spare2" type="Spare"><len>4</len></item>
                <item name="QUALITY" type="Fixed"><len>12</len></item>
            </items>
        </item>

        <item name="120" type="Fixed">
            <dsc>Measured Radial Doppler Speed</dsc>
            <len>8</len>
            <!-- TODO: convert... -->
        </item>

        <item name="130" type="Extended">
            <dsc>Radar Plot Characteristics</dsc>
            <len>(8,8)</len>
        </item>

        <item name="131" type="Fixed">
            <dsc>Received Power</dsc>
            <len>8</len>
            <!-- TODO: convert... -->
        </item>

        <item name="141" type="Fixed">
            <dsc>Truncated Time of Day</dsc>
            <len>16</len>
            <convert>
                <type>unsigned decimal</type>
                <lsb>1.0/128</lsb>
                <unit>s</unit>
            </convert>
        </item>

        <item name="150">
            <dsc>Presence of X-Pulse</dsc>
            <items>
                <item name="XA" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="X-pulse received in Mode-3/A reply"/>
                    </values>
                </item>
                <item name="spare1" type="Spare"><len>1</len></item>
                <item name="XC" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="X-pulse received in Mode-C reply"/>
                    </values>
                </item>
                <item name="spare2" type="Spare"><len>2</len></item>
                <item name="X2" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="X-pulse received in Mode-2 reply"/>
                    </values>
                </item>
                <item name="spare3" type="Spare"><len>2</len></item>
            </items>
        </item>

        <item name="161" type="Fixed">
            <dsc>Track Plot Number</dsc>
            <len>16</len>
        </item>

        <item name="170" type="Extended">
            <dsc>Track Status</dsc>
            <len>(8,8)</len>
            <items>
                <item name="CON" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Confirmed track"/>
                        <value val="1" dsc="Track in initialisation phase"/>
                    </values>
                </item>
                <item name="RAD" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Primary track"/>
                        <value val="1" dsc="SSR/Combined track"/>
                    </values>
                </item>
                <item name="MAN" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="Aircraft manoeuvring"/>
                    </values>
                </item>
                <item name="DOU" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="Doubtful plot to track association"/>
                    </values>
                </item>
                <item name="RDPC" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="RDP Chain 1"/>
                        <value val="1" dsc="RDP Chain 2"/>
                    </values>
                </item>
                <item name="spare1" type="Spare"><len>1</len></item>
                <item name="GHO" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="Ghost track"/>
                    </values>
                </item>
                <item name="TRE" type="Fixed"><len>1</len>
                    <values>
                        <value val="0" dsc="Default"/>
                        <value val="1" dsc="Last report for a track"/>
                    </values>
                </item>
                <item name="spare2" type="Spare"><len>6</len></item>
            </items>
        </item>

        <item name="200">
            <dsc>Calculated Track Velocity in Polar Coordinates</dsc>
            <items>
                <item name="GS" type="Fixed"><len>16</len></item>
                <item name="CH" type="Fixed"><len>16</len></item>
            </items>
            <!-- TODO: convert... -->
        </item>

        <item name="210" type="Extended">
            <dsc>Track Quality</dsc>
            <len>(8,8)</len>
        </item>

        <item name="SP" type="Explicit">
            <dsc>Special Purpose Field</dsc>
        </item>

        <item name="RFS" type="Rfs">
            <dsc>Random Field Sequencing</dsc>
        </item>
    </items>

